#include <iostream>
#include<math.h>
using namespace std;


int main() {

// Code to convert a decimal number into a binary number:

  int n, answer=0, bit, count=0;
  cout<<"Enter the number: ";
  cin>>n;

  while(n>0)
    {
      bit=n&1;
      n>>=1;
      answer+=bit*pow(10,count);
      count++;
    }
  cout<<"The binary representation of the number is: "<<answer;
  
  return 0;
}
