   // Calculate the sum of the first n natural numbers
   
   int i=1,n;
  int sum=0;
  cout<<"Enter the number: ";
  cin>>n;
  while(i<=n)
    {
      sum+=i;
      i++;
    }
  cout<<"The sum is : "<<sum;
  
  // Code to find sum of all even numbers upto n

  int i=1;
  int n;
  int sum=0;
  cout<<"Enter the value of n : ";
  cin>>n;
  while (i<=n)
    {
      if(i%2==0)
      {
        cout<<i<<endl;
        sum+=i;
      }
      i++;
    }
  cout<<"The sum of all the even numbers upto n is : "<<sum;
    
