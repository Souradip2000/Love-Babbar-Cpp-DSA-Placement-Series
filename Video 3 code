    // Program to check if an input is uppercase, lowercase or a number
    
   cout<<"Enter the value:";
    int a = cin.get();
    
    if (a>=65 && a<=90)
        cout<<"Uppercase character";
    else if ( a>='A' && a<=122 )
        cout<<"Lowercase character";
