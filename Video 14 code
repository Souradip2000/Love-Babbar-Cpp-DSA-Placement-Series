// Search in a Sorted and rotated array. -- Naive approach

#include <bits/stdc++.h> 
int findPosition(vector<int>& arr, int n, int k)
{
    // Write your code here.
    
    for ( int i=0; i<arr.size(); i++)
    {
        if( arr[i] == k)
        {
            return i;
        }
        
        //return -1;
    }
    return -1;
    
    // Return the position of K in ARR else return -1.
}



