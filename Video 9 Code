#include <iostream>
#include <math.h>

using namespace std;

void printArray( int arr[])
{
  cout << sizeof(arr) << endl;
  for ( int i=0; i<sizeof(arr); i++)
    {
      
      cout << arr[i] << " ";
    }
}

int main() {
  // Code to demonstrate arrays

  int arr[5] = { 1, 2, 3, 4, 5};

  //arr[0] = 24;
  //cout << arr[0];

  //arr = { 1, 2, 3, 4, 5};

  //int arr[5] = { [0 . . . 4] = -24};

  // Passing an array to a function

  printArray(arr);
  
   // cout << arr[0];
   //  cout << arr[1];
   //  cout << arr[2];
   //  cout << arr[3];
   //  cout << arr[4];

  return 0;
}

#include <iostream>
#include <math.h>

using namespace std;

void printArray( int arr[], int size)
{
  //cout << sizeof(arr) / sizeof(int) << endl;
  //for ( int i=0; i< sizeof(arr) / sizeof(int) ; i++)
  for ( int i=0; i<size; i++)
    {
      
      cout << arr[i] << " ";
    }
}

int main() {
  // Code to demonstrate arrays

  int arr[5] = { 1, 2, 3, 4, 5};

  //arr[0] = 24;
  //cout << arr[0];

  //arr = { 1, 2, 3, 4, 5};

  //int arr[5] = { [0 . . . 4] = -24};

  // Passing an array to a function

  printArray(arr, 5);
  
   // cout << arr[0];
   //  cout << arr[1];
   //  cout << arr[2];
   //  cout << arr[3];
   //  cout << arr[4];

  // Code to find the maximum element in an array
  int max = INT_MAX;
  for (int i=0; i<=5; i++)
    {
      if ( arr[i] >= max)
        max = arr[i];
    }
  cout << "\nThe maximum element of the array is : " << max;

  // Code to print the minimum element of the array
  int min = INT_MIN;
  for (int j=0; j<5; j++)
    {
        if( min >= arr[j])
          min = arr[j];
    }
  cout << "\NThe minimum element of the array is: " << min;

  return 0;
}
